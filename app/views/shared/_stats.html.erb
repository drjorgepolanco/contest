<% @user ||= current_user %>
<div class="stats">
  <a class="large-6 medium-6 small-6 columns" href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.followed_users.count %>
    </strong>
    following
  </a>
  <a class="large-6 medium-6 small-6 columns" href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>