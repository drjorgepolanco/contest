<% provide(:title, @challenge.title) %>

<div class="large-12 medium-12 small-12 columns">
  <div class="large-12 medium-12 small-12 columns container-top border-bottom">
    <div class="large-10 medium-10 small-10 columns">
      <h4 class="main-title"><strong><i class="fi-star"></i> <%= @challenge.title.titleize %></strong></h4>
    </div>
    <div class="large-2 medium-2 small-2 columns container">
      <div class="large-12 medium-12 small-12 columns container">
        <div class="large-6 medium-6 small-6 columns container-top to-right top-icon">
          <% if current_user == @challenge.user %>
            <%= link_to raw('<i class="fi-pencil"></i>'), edit_challenge_path(@challenge) %>
          <% end %>
        </div>
        <div class="large-6 medium-6 small-6 columns container-top to-center top-icon">
          <% if current_user == @challenge.user %>
            <%= link_to raw('<i class="fi-trash"></i>'), challenge_path, method: :delete, data: { confirm: "Are you sure?" }, title: @challenge.title.titleize %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="large-12 medium-12 small-12 columns container">
  <div class="large-12 medium-12 small-12 columns container-top-bottom-2x">
    <div class="large-3 medium-3 small-3 columns">
      <%= image_tag @challenge.image, class: "image" %>
    </div>
    <div class="large-3 medium-3 small-3 columns container box">
      <div class="large-12 medium-12 small-12 columns container">
        <div class="large-3 medium-3 small-3 columns container">
          <%= image_tag @challenge.user.profile_pic %>
        </div>
        <div class="large-9 medium-9 small-9 columns column-top">
          <strong><%= link_to full_name(@challenge.user).titleize, user_path(@challenge.user) %></strong>
        </div>
      </div>
    </div>
    <div class="large-3 medium-3 small-3 columns">
    </div>
    <div class="large-3 medium-3 small-3 columns">
      <%= render 'challenge_posts/form' %>
    </div>
  </div>
</div>

<div class="large-12 medium-12 small-12 columns container main-sash">
</div>

<div class="large-12 medium-12 small-12 columns">
  <div class="large-12 medium-12 small-12 columns container-top border-bottom">
    <div class="large-12 medium-12 small-12 columns">
      <h4 class="main-title"><strong><i class="fi-page-filled"></i> <%= @title %></strong></h4>
    </div>
  </div>
</div>
<% @posts = @contest.posts %>
<%= render 'shared/post' %>


